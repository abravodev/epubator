<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false" xmlns:tools="http://schemas.android.com/tools" tools:ignore="NestedWeights">

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/logotype_margin"
            android:gravity="center"
            android:src="@drawable/logotype"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

    <LinearLayout
        style="@style/ButtonBarStyle.Landscape">
        
        <Button
            style="@style/ButtonBarButtonStyle"
            android:id="@+id/bt_convert_pdf"
            android:text="@string/convert_pdf" />

        <Button
            style="@style/ButtonBarButtonStyle"
            android:id="@+id/bt_verify_epub"
            android:text="@string/verify_epub" />
    </LinearLayout>

</LinearLayout>